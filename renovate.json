{
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^/security-actions/semgrep/run-semgrep/action\\.yml$"],
      "matchStrings": [
        "418272760313\\.dkr\\.ecr\\.us-east-1\\.amazonaws\\.com\\/k-internal\\/(?<packageName>semgrep\\/semgrep):(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "docker",
      "extractVersionTemplate": "^(?:@{{{depName}}}@|v)(?<version>[0-9\\.]+)$",
      "autoReplaceStringTemplate": "{{{packageName}}}:{{{newVersion}}}",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "description": "Fetch updates for ECR semgrep image from Docker Hub",
      "matchPackageNames": ["semgrep/semgrep"],
      "versioning": "docker",
      "enabled": false
    }
  ]
}
