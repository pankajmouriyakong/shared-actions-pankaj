{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "description": "Update Trivy image tag in GitHub Actions workflows",
      "customType": "regex",
      "fileMatch": [
        "^/security-actions/scan-docker-image/action.yml$"
      ],
      "matchStrings": [
        "uses:\\s+docker://public\\.ecr\\.aws/k9g5m0d7/trivy:(?<currentValue>[\\w.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "public.ecr.aws/k9g5m0d7/trivy"
    },
    {
      "description": "Update assets.tag for Trivy in dependencies.yml",
      "customType": "regex",
      "fileMatch": [
        "^\\.github/dependencies\\.yml$"
      ],
      "matchStrings": [
        "- name:\\s*trivy[\\s\\S]*?\\n\\s*tag:\\s*(?<currentValue>[\\w.]+)",
        "TRIVY_BASE_TAG:\\s*(?<currentValue>[\\w.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "aquasec/trivy"
    }
  ]
}
