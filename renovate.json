{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchPaths": ["security-actions/build/dockerfiles/**"],
      "extractVersion": {
        "enabled": true
      },
      "matchDatasources": ["docker"],
      "matchCurrentDigest": true,
      "groupName": "Docker base images",
      "updateTypes": ["major", "minor", "patch", "digest"]
    }
  ],
  "docker": {
    "enabled": true,
    "pinDigests": true
  }
}
