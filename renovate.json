{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "description": "Update Trivy image in GitHub Actions workflows",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["public.ecr.aws/k9g5m0d7/trivy"],
      "registryUrls": ["https://public.ecr.aws"],
      "schedule": ["* * * * *"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "trivy",
      "groupName": "trivy-image-updates",
      "commitMessage": "chore(trivy): update trivy version to {{newVersion}}"
    }
  ],
  "regexManagers": [
    {
      "customType": "regex",
      "fileMatch": ["security-actions/scan-docker-image/.*\\.yml$"],
      "matchStrings": [
        "uses:\\s+public\\.ecr\\.aws/k9g5m0d7/trivy:(?<currentValue>[\\w.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "public.ecr.aws/k9g5m0d7/trivy",
    }
  ]
}
