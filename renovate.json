{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
      {
        "matchPackageNames": ["@security-actions/semgrep"],
        "groupName": "@security-actions/semgrep",
        "pinDigests": true
      },
      {
        "matchPackageNames": ["@security-actions/scan-docker-image"],
        "groupName": "@security-actions/scan-docker-image",
        "pinDigests": true
      },
      {
        "matchPackageNames": ["@security-actions/sign-docker-image"],
        "groupName": "@security-actions/sign-docker-image",
        "pinDigests": true
      }
    ],
    "separateMajorMinor": true,
    "separateMultipleMajor": true,
    "separateMinorPatch": true
  }