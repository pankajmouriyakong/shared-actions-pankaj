{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "regexManagers": [
      {
        "fileMatch": [".github/workflows/.*\\.yml"],
        "matchStrings": [
          "uses:\\s*(?<depName>@security-actions/semgrep)(@(?<currentValue>[\\w.\\-]+))?(?<digest>@sha256:[a-f0-9]+)?"
        ],
        "depNameTemplate": "{{{ depName }}}",
        "versioningTemplate": "github-tags",
        "datasourceTemplate": "github-releases",
        "extractVersionTemplate": "{{{ currentValue }}}{{{ digest }}}"
      },
      {
        "fileMatch": [".github/workflows/.*\\.yml"],
        "matchStrings": [
          "uses:\\s*(?<depName>@security-actions/scan-docker-image)(@(?<currentValue>[\\w.\\-]+))?(?<digest>@sha256:[a-f0-9]+)?"
        ],
        "depNameTemplate": "{{{ depName }}}",
        "versioningTemplate": "github-tags",
        "datasourceTemplate": "github-releases",
        "extractVersionTemplate": "{{{ currentValue }}}{{{ digest }}}"
      },
      {
        "fileMatch": [".github/workflows/.*\\.yml"],
        "matchStrings": [
          "uses:\\s*(?<depName>@security-actions/sign-docker-image)(@(?<currentValue>[\\w.\\-]+))?(?<digest>@sha256:[a-f0-9]+)?"
        ],
        "depNameTemplate": "{{{ depName }}}",
        "versioningTemplate": "github-tags",
        "datasourceTemplate": "github-releases",
        "extractVersionTemplate": "{{{ currentValue }}}{{{ digest }}}"
      }
    ],
    "packageRules": [
      {
        "matchDatasources": ["github-releases"],
        "matchDepNames": ["@security-actions/semgrep"],
        "sourceUrl": "https://github.com/pankajmouriyakong/shared-actions-pankaj",
        "groupName": "@security-actions/semgrep"
      },
      {
        "matchDatasources": ["github-releases"],
        "matchDepNames": ["@security-actions/scan-docker-image"],
        "sourceUrl": "https://github.com/pankajmouriyakong/shared-actions-pankaj",
        "groupName": "@security-actions/scan-docker-image"
      },
      {
        "matchDatasources": ["github-releases"],
        "matchDepNames": ["@security-actions/sign-docker-image"],
        "sourceUrl": "https://github.com/pankajmouriyakong/shared-actions-pankaj",
        "groupName": "@security-actions/sign-docker-image"
      }
    ],
    "separateMajorMinor": true,
    "separateMultipleMajor": true,
    "separateMinorPatch": true
  }
  