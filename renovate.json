{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
      {
        "matchPackageNames": [
          "@security-actions/semgrep",
          "@security-actions/scan-docker-image",
          "@security-actions/sign-docker-image"
        ],
        "matchSourceUrls": ["https://github.com/pankajmouriyakong/shared-actions-pankaj"],
        "groupName": null,
        "separateMultipleMajor": true,
        "separateMinorPatch": true,
        "digest": {
          "separateDigestPrs": true
        },
        "versioning": "semver",
        "pinDigests": true,
        "separatePackages": true
      }
    ],
    "separateMajorMinor": true,
    "separateMultipleMajor": true,
    "separateMinorPatch": true
  }