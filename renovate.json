{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [".github/build/docker/security-image-matrix.yml"],
      "matchStrings": [
        "BASE_TOOL_IMAGE:\\s*(?<depName>.*?):(?<currentValue>[\\w\\.\\-]+)"
      ],
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "docker",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [".github/build/docker/security-image-matrix.yml"],
      "matchStrings": [
        "DB_IMAGE:\\s*(?<depName>.*?):(?<currentValue>[\\w\\.\\-]+)"
      ],
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "docker",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [".github/build/docker/security-image-matrix.yml"],
      "matchStrings": [
        "BASE_IMAGE:\\s*(?<depName>.*?)(?<currentValue>@sha256:[a-f0-9]+)"
      ],
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "docker",
      "datasourceTemplate": "docker"
    }
  ]
}
