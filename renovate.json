{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
      {
        "matchManagers": ["github-actions"],
        "matchDatasources": ["github-releases"],
        "matchPackageNames": ["@security-actions/semgrep"],
        "sourceUrl": "https://github.com/pankajmouriyakong/shared-actions-pankaj",
        "separateMajorMinor": true,
        "separateMultipleMajor": true,
        "separateMinorPatch": true
      },
      {
        "matchManagers": ["github-actions"],
        "matchDatasources": ["github-releases"],
        "matchPackageNames": ["@security-actions/scan-docker-image"],
        "sourceUrl": "https://github.com/pankajmouriyakong/shared-actions-pankaj",
        "separateMajorMinor": true,
        "separateMultipleMajor": true,
        "separateMinorPatch": true
      },
      {
        "matchManagers": ["github-actions"],
        "matchDatasources": ["github-releases"],
        "matchPackageNames": ["@security-actions/sign-docker-image"],
        "sourceUrl": "https://github.com/pankajmouriyakong/shared-actions-pankaj",
        "separateMajorMinor": true,
        "separateMultipleMajor": true,
        "separateMinorPatch": true
      }
    ]
  }