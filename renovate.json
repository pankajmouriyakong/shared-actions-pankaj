
{
    "extends": [
      "config:recommended"
    ],
    "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^/security-actions/semgrep/run-semgrep/action\\.yml$"],
        "matchStrings": [
          "uses: docker://418272760313.dkr.ecr.us-east-1.amazonaws.com/k-internal/(?<depName>.*?):(?<currentValue>.*?)"
        ],
        "datasourceTemplate": "docker",
        "depNameTemplate": "semgrep"
      }
    ],
    "packageRules": [
        {
        "description": "Replace Dockerhub with ghcr.io for renovate",
        "matchDatasources": ["docker"],
        "matchDepNames": ["semgrep/semgrep"],
        "versioning": "docker"
        }
    ]
      
  }