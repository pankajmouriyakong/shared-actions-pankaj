{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "description": "Update tags for Trivy in dependencies.yml",
      "customType": "regex",
      "fileMatch": [
        "^\\.github/dependencies\\.yml$"
      ],
      "matchStrings": [
        "- name:\\s*trivy[\\s\\S]*?\\n\\s*tag:\\s*(?<currentValue>[\\w.]+)",
        "TRIVY_BASE_TAG:\\s*(?<currentValue>[\\w.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "aquasec/trivy"
    },
    {
      "description": "Update tags for Semgrep in dependencies.yml",
      "customType": "regex",
      "fileMatch": [
        "^\\.github/dependencies\\.yml$"
      ],
      "matchStrings": [
        "- name:\\s*semgrep[\\s\\S]*?\\n\\s*tag:\\s*(?<currentValue>[\\w.]+)",
        "SEMGREP_BASE_TAG:\\s*(?<currentValue>[\\w.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "returntocorp/semgrep"
    },
    {
      "description": "Update Semgrep version in action.yml based on dependencies.yml",
      "fileMatch": [
        "^security-actions/tools/semgrep/action\\.yml$"
      ],
      "matchStrings": [
        "uses:\\s+docker://[\\w.\\-]+\\.amazonaws\\.com/semgrep:(?<currentValue>[\\w.]+)"
      ],
      "datasourceTemplate": "file",
      "depNameTemplate": "dependencies.yml",
      "fileNameTemplate": ".github/dependencies.yml",
      "extractVersion": "- name:\\s*semgrep[\\s\\S]*?\\n\\s*tag:\\s*(?<version>[\\w.]+)",
      "versioning": "semver"
    },
    {
      "description": "Update trivy version in action.yml based on dependencies.yml",
      "fileMatch": [
        "^security-actions/tools/trivy/action\\.yml$"
      ],
      "matchStrings": [
        "uses:\\s+docker://[\\w.\\-]+\\.amazonaws\\.com/trivy:(?<currentValue>[\\w.]+)"
      ],
      "datasourceTemplate": "file",
      "depNameTemplate": "dependencies.yml",
      "fileNameTemplate": ".github/dependencies.yml",
      "extractVersion": "- name:\\s*trivy[\\s\\S]*?\\n\\s*tag:\\s*(?<version>[\\w.v]+)",
      "versioning": "semver"
    }
  ],
  "packageRules": [
    {
      "description": "Configure file datasource",
      "matchDatasources": ["file"],
      "extractVersion": "(?<version>.*)",
      "fileMatch": ["\\.github/dependencies\\.yml$"]
    }
  ]
}
