
{
    "extends": [
      "config:recommended"
    ],
    "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^/security-actions/semgrep/run-semgrep/action\\.yml$"],
        "matchStrings": [
          "semgrep/semgrep:(?<currentValue>[\\d\\.]+)"
        ],
        "datasourceTemplate": "docker",
        "depNameTemplate": "semgrep",
        "extractVersionTemplate": "^(?:v)?(?<version>[0-9\\.]+)$"
      }
    ],
    "packageRules": [
        {
        "description": "Replace Dockerhub with ghcr.io for renovate",
        "registryUrls": ["https://hub.docker.com"],
        "matchDatasources": ["docker"],
        "matchPackageNames": ["https://hub.docker.com/r/semgrep/semgrep"]
        }
    ]
      
  }