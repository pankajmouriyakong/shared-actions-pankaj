
{
    "extends": [
      "config:recommended"
    ],
    "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^/security-actions/semgrep/run-semgrep/action\\.yml$"],
        "matchStrings": [
          "semgrep/semgrep:(?<currentValue>[\\d\\.]+)"
        ],
        "datasourceTemplate": "docker",
        "depNameTemplate": "hub.docker.com/r/semgrep/semgrep"
      }
    ],
    "hostRules": [
    {
    "matchHost": "hub.docker.com"
    }
    ],
    "packageRules": [
        {
        "description": "Replace Dockerhub with ghcr.io for renovate",
        "matchDatasources": ["docker"],
        "matchDepNames": ["semgrep/semgrep"],
        "matchPackageNames": ["hub.docker.com/r/semgrep/semgrep"],
        "versioning": "docker"
        }
    ]
      
  }