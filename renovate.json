{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["custom"],
  "customManagers": [
    {
      "description": "Update Trivy image tag in GitHub Actions workflows",
      "customType": "regex",
      "fileMatch": [
        "^/security-actions/scan-docker-image/action.yml$"
      ],
      "matchStrings": [
        "uses:\\s+docker://public\\.ecr\\.aws/k9g5m0d7/trivy:(?<currentValue>[\\w.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "public.ecr.aws/k9g5m0d7/trivy"
    },
    {
      "description": "Update Semgrep image tag in GitHub Actions workflows",
      "customType": "regex",
      "fileMatch": [
        "^/security-actions/semgrep/action.yml$"
      ],
      "matchStrings": [
        "uses:\\s+docker://public\\.ecr\\.aws/k9g5m0d7/semgrep:(?<currentValue>[\\w.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "public.ecr.aws/k9g5m0d7/semgrep"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchDepNames": ["public.ecr.aws/k9g5m0d7/trivy","public.ecr.aws/k9g5m0d7/semgrep"],
      "enabled": true
    }
  ]
}
